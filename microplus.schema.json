{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Addon",
    "description": "Unofficial microStudio addon manifest",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the addon"
        },
        "version": {
            "type": "string",
            "description": "The addon version"
        },
        "description": {
            "type": "string",
            "description": "The description of the addon"
        },
        "icon": {
            "type": "string",
            "description": "The addon icon"
        },
        "entry": {
            "type": "string",
            "description": "The entry point of the addon"
        }
    },
    "required": ["entry"]
}